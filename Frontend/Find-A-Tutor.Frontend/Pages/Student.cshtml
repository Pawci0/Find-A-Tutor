@page
@model Find_A_Tutor.Frontend.Pages.StudentModel
@{
    ViewData["Title"] = "Student";
}

<h1>Student</h1>
<table>
    @if (Model.privateLessons != null && Model.privateLessons.IsSuccess)
    {
        <tr>
            <th></th>
        </tr>
        foreach (var item in Model.privateLessons.Value)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.StudentId</td>
                <td>@item.TutorId</td>
                <td>@item.CreatedAt</td>
                <td>@item.TakenAt</td>
                <td>@item.UpdatedAt</td>
                <td>@item.RelevantTo</td>
                <td>@item.Description</td>
                <td>@item.Subject</td>
                <td>@item.IsAssigned</td>
                <td>@item.IsPaid</td>
                <td>@item.IsDone</td>
            </tr>
        }
    }
    else
    {
        <p>Brak lekcji</p>
    }
</table>
